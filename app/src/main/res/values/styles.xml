<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h2_text_style">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.AppLover.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ButtonStyle.AppLover.Contained" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lightGreen</item>
    </style>

    <style name="ShapeAppearence.AppLover.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="TextAppearance.AppLover.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.SnackBar.AppLover" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/lightGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>